@using GtAcademy.Application.Authentication.Commands.RegisterWithPhone
@model RegisterWithPhoneDto

@{
    ViewData["Title"] = "ثبت نام";
}

<section class="contact-section pt-120 pb-120">
    <div class="container">
        <div class="row gy-lg-0 gy-5">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="blog-contact-form contact-form">
                    <h2 class="title mb-0">ثبت نام در سایت</h2>
                    <p class="mb-30 mt-10">
                        لطفا نام کاربری و شماره موبایل خود را جهت ثبت نام در سایت وارد کنید
                    </p>
                    <div class="request-form">
                        <form asp-action="Register" class="form-horizontal" id="ajax_contact" method="post">
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <div class="form-item">
                                        <input asp-for="@Model.UserName" class="form-control" id="UserName" name="UserName" placeholder="نام کاربری" type="text">
                                        <div class="icon">
                                            <i class="fa-regular fa-user"></i>
                                        </div>
                                    </div>
                                    <div class="alert mt-20">
                                        <span asp-validation-for="@Model.UserName"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <div class="form-item">
                                        <input asp-for="@Model.PhoneNumber" class="form-control" id="PhoneNumber" name="PhoneNumber" placeholder="شماره موبایل" type="text">
                                        <div class="icon">
                                            <i class="fa-regular fa-mobile-phone"></i>
                                        </div>
                                    </div>
                                    <div class="alert mt-20">
                                        <span asp-validation-for="@Model.PhoneNumber"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="submit-btn">
                                <button class="ed-primary-btn" id="submit" type="submit">
                                    ثبت نام
                                </button>
                            </div>
                        </form>
                    </div>
                    <br/>
                    <a href="/Login">قبلا ثبت نام کرده اید ؟ ورود</a>
                </div>
            </div>
        </div>
    </div>
</section>
